# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:4200

# Enable/Disable Swagger documentation
ENABLE_SWAGGER=true

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
MONGODB_URI=mongodb://localhost:27017/frevo

# ==========================================
# JWT CONFIGURATION
# ==========================================
# IMPORTANT: Change these secrets in production!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-very-long-and-random
JWT_EXPIRES_IN=7d

# JWT Refresh Token Configuration
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-in-production-make-it-very-long-and-random
JWT_REFRESH_EXPIRES_IN=30d

# ==========================================
# EMAIL CONFIGURATION
# ==========================================
# SMTP Configuration for sending emails
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Email sender details
MAIL_FROM=noreply@frevo.com
MAIL_FROM_NAME=Frevo Platform

# ==========================================
# STRIPE CONFIGURATION (Optional)
# ==========================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ==========================================
# AZURE BLOB STORAGE (Optional)
# ==========================================
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string
AZURE_STORAGE_CONTAINER_NAME=frevo-uploads

# ==========================================
# REDIS CONFIGURATION (Optional)
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==========================================
# LOGGING CONFIGURATION
# ==========================================
LOG_LEVEL=info

# ==========================================
# RATE LIMITING
# ==========================================
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# ==========================================
# SECURITY CONFIGURATION
# ==========================================
# Session secrets for additional security
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# ==========================================
# DEVELOPMENT/TESTING
# ==========================================
# Set to true to disable email sending during development
DISABLE_EMAIL_SENDING=false

# Mock email service for testing
MOCK_EMAIL_SERVICE=false
