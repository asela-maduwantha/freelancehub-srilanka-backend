    {
      "name": "Client Job Management",
      "item": [
        {
          "name": "Create New Job",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data._id) {",
                  "        pm.collectionVariables.set('job_id', response.data._id);",
                  "        console.log('Job created with ID:', response.data._id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Build a Modern React Web Application\",\n  \"description\": \"I need a skilled React developer to build a modern web application with the following requirements: responsive design, user authentication, payment integration, and real-time features.\",\n  \"category\": \"web-development\",\n  \"subcategory\": \"frontend-development\",\n  \"projectType\": \"fixed-price\",\n  \"budget\": {\n    \"type\": \"fixed\",\n    \"min\": 1500,\n    \"max\": 3000,\n    \"currency\": \"USD\"\n  },\n  \"duration\": {\n    \"value\": 30,\n    \"unit\": \"days\"\n  },\n  \"skills\": [\n    \"React\",\n    \"JavaScript\",\n    \"TypeScript\",\n    \"CSS\",\n    \"HTML\"\n  ],\n  \"experienceLevel\": \"intermediate\",\n  \"isUrgent\": false,\n  \"isFeatured\": true,\n  \"maxProposals\": 50\n}"
            },
            "url": {
              "raw": "{{base_url}}/jobs",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "jobs"
              ]
            },
            "description": "Create a new job posting (client only). Saves job ID to collection variables."
          },
          "response": []
        },
